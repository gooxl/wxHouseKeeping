/* pages/placeOrder/placeOrder.wxss */
/* 外层元素 */
.placeOrder{
  /* padding:20rpx; */
}
/* 商品栏 */
.product{

}
/* 服务地址 */
.sadd{
  margin-top:30rpx; 
}
.sadd-info{
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  position:relative;
  font-size: 30rpx;
}
.sadd-info>view{
  width:85%;
}

.sadd-info>view text{
  
  color:#666;
}
.sadd-icon{
  position:absolute;
  right:2%;
  top:25%;
}
/* 服务时间 */
.sdate{
  margin-top:30rpx; 
  
}
.sdate-info{
  position:relative;
  text-align: right;
  display: flex;
  flex-direction: row; 

}
.sdate-info view{
  width:85%;
}
.sdate-icon{
  position:absolute;
  right:2%;
}
/* 备注 */
.remarks{
  margin-top:30rpx; 
  padding:30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.remarks view{
  width:25%;
} 

/* 服务地址-上拉菜单 */
.address-action{
  height:500rpx;
  padding:30rpx;
  z-index: 2;
}
.add-btn{
  position:fixed;
  width:100%;
  bottom:0
}
/* 无可用地址样式 */
.noAdd{
  text-align:center;
  padding-top:80rpx;
  color: #bfbfbf;
}
.noAdd image{
  width:200rpx;
  height:200rpx; 
}
.sub-btn{
  z-index: 1;
  position:absolute;
}
/* 地址列表 */
.add{
  display: flex;
  padding-top:10rpx;
  position: relative;
}
.usermsg{
  display: flex;
}
.usermsg>view view{
  color: #888;
  font-size: 26rpx;
}
.add-msg{
  width: 85%;
}
.add-icon{
  position:absolute;
  right:2%;
  top:25%;
}